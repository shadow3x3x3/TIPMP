<style>
  #start {
    width: 10em;
    height: 10em;
    font-size: 20px;
    margin: 30px;
  }
</style>

<h1 class="text-center">模擬參數設定</h1>
<div class="col-md-8 col-md-offset-2">
  <form action="SkylinePathResult" class="form" method="post" role="form">
    <div class="form-group col-md-3">
      <h3>設定起訖點</h3>
      <div class="form-group">
        <label for="source">起點</label>
        <input type="number" class="form-control" id="source" name="source" min="0" value="9993">
      </div>
      <div class="form-group">
        <label for="destination">終點</label>
        <input type="number" class="form-control" id="destination" name="destination" min="0" value="11291">
      </div>
      <div class="form-group">
        <label for="z_radio">是否正規化</label>
        <div class="radio">
          <label>
            <input type="radio" name="z_radio" id="zRadio1" value="true" checked>
            正規化維度
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="z_radio" id="zRadio2" value="false">
            普通維度
          </label>
        </div>
      </div>
      <div class="form-group">
        <label for="z_radio">挑選雨量</label>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain1" value="150" checked>
            150mm
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain2" value="200">
            200mm
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain3" value="250">
            250mm
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain4" value="300">
            300mm
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain5" value="350">
            350mm
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain6" value="400">
            400mm
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain7" value="450">
            450mm
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain8" value="500">
            500mm
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain9" value="550">
            550mm
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="rain" id="rain10" value="600">
            600mm
          </label>
        </div>
      </div>

    </div>
    <div class="form-group col-md-4">
      <h3>條件倍數設定</h3>
      <div class="form-group">
        <label>路寬</label>
        <input type="number" class="form-control" id="dim_1" name="dim_input_1" min="1" value=1 step="0.000001"/>
      </div>
      <div class="form-group">
        <label>長度</label>
        <input type="number" class="form-control" id="dim_2" name="dim_input_2" min="1" value=1 step="0.000001"/>
      </div>
      <div class="form-group">
        <label>mm</label>
        <input type="number" class="form-control" id="dim_3" name="dim_input_3" min="1" value=1 step="0.000001"/>
      </div>
    </div>
    <div class="form-group col-md-2">
      <button type="submit" id="start" class="btn btn-primary" onclick='showloading()'>開始計算</button>
    </div>
  </form>
</div>


<script type="text/javascript">
$('#start').click(function() {
  $.blockUI({
    message: "<h3>計算中，請稍後...<h3>",
    css: {
      border: 'none',
      padding: '5px',
      'background-color': 'transparent',
      '-webkit-border-radius': '10px',
      '-moz-border-radius': '10px',
      opacity: .6,
      color: '#fff',
      cursor: 'wait'
    }
  });
});
</script>
